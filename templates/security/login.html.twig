        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

          <!-- Ajout de method="POST" -->
          <input  placeholder="Email" name="email"  id="inputEmail" value="{{ last_username }}" type="email" autocomplete="email" required autofocus />

          <input class="inputconect" placeholder="Password" autocomplete="current-password" required id="inputPassword" type="password" type="text"  name="password" />


          <div class="btnconnexion">
            <input type="submit" class="valider" value="Valider" />
